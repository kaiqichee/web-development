<link href="../public/site.css" rel="stylesheet" type="text/css" />
  <h1>Shows Found</h1>
  <h2>{{searchTerm}}</h2>
  <main>
    {{#if shows.length}}
    <ul class="indShow">
      {{#each shows}}
        <li class="indShow">
          <a href="/shows/{{this.show.id}}">{{this.show.name}}</a>
        </li>
      {{/each}}
       </ul>
      {{else}}
        <p class="not-found">We're sorry, but no results were found for {{searchTerm}}.</p>
      {{/if}}

    <a href="/">Make another search</a>
  </main>
